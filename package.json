  "repository": {
    "type": "git",
    "url": "https://github.com/username/cloud-movies.git"
  },
  "bugs": {
    "url": "https://github.com/username/cloud-movies/issues"
  },
  "homepage": "https://github.com/username/cloud-movies#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "node-fetch": "^3.3.1",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",

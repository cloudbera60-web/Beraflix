  "description": "Professional Netflix-like movie and TV series streaming platform with MongoDB integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.css\"",
    "docker:build": "docker build -t cloud-movies .",
    "docker:run": "docker run -p 3000:3000 cloud-movies",
    "docker:compose": "docker-compose up",
    "seed": "node scripts/seedDatabase.js"
  },
  "keywords": [
    "streaming",
    "movies",
    "tv-series",
    "mongodb",
    "netflix-clone",
    "express",
    "pwa",
    "video-streaming"
